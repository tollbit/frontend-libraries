{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "lib:build": "turbo build --filter=./packages/*",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "type-check": "turbo type-check",
    "format:check": "turbo format:check",
    "version": "changeset",
    "ci:publish": "changeset publish -r && changeset tag"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "prettier": "^3.2.5",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.4"
  },
  "overrides": {
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.7.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/**/*"
  ]
}
